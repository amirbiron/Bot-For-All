# קובץ דוגמה למשתני סביבה
# העתק לקובץ .env והחלף את הערכים האמיתיים שלך

# טוכן הבוט מ-@BotFather (חובה)
BOT_TOKEN=1234567890:ABCDEFghijklmnopQRSTUVwxyz123456789

# המזהה שלך לקבלת הודעות מהבוט (חובה)
# לקבלת המזהה: שלח הודעה ל-@userinfobot
OWNER_CHAT_ID=123456789

# מספר וואטסאפ שלך (אופציונלי)
# פורמט: +972501234567
WHATSAPP_NUMBER=+972501234567

# הגדרות פיתוח (אופציונלי)
DEBUG=False
LOG_LEVEL=INFO

# הגדרות בסיס נתונים (אופציונלי)
# עבור SQLite: sqlite:///bot_data.db
# עבור PostgreSQL: postgresql://user:pass@host:port/dbname
DATABASE_URL=sqlite:///bot_data.db

# הגדרות זמן (אופציונלי)
REQUEST_TIMEOUT=30
MESSAGE_TIMEOUT=10

# הגדרות מתקדמות (אופציונלי)
MAX_REQUESTS_PER_USER=10
CLEANUP_DAYS=90

# הגדרות webhook (רק אם משתמש ב-webhook במקום polling)
# WEBHOOK_URL=https://your-app.onrender.com/webhook
# WEBHOOK_SECRET=your-secret-key

# הגדרות Redis (אם יש צורך במטמון מתקדם)
# REDIS_URL=redis://localhost:6379

# הודעות התראה (אופציונלי)
SEND_STARTUP_NOTIFICATION=True
SEND_ERROR_NOTIFICATIONS=True

# הגדרות גיבוי (אופציונלי)  
AUTO_BACKUP=False
BACKUP_FREQUENCY_HOURS=24

# שפה ואזור זמן (אופציונלי)
TIMEZONE=Asia/Jerusalem
LANGUAGE=he

# הודעות מותאמות אישית (אופציונלי)
CUSTOM_WELCOME_MESSAGE=""
CUSTOM_SERVICE_INFO=""

# הגדרות אבטחה (מתקדם)
RATE_LIMIT_ENABLED=True
MAX_MESSAGES_PER_MINUTE=10

# הגדרות לוג (אופציונלי)
LOG_TO_FILE=True
LOG_FILE_PATH=bot.log
MAX_LOG_SIZE_MB=10

# ===================================
# הוראות לשימוש:
# ===================================
# 1. העתק קובץ זה ל-.env
# 2. החלף את הערכים באמיתיים שלך
# 3. אל תשלח את .env ל-Git!
# 4. ב-Render הוסף את המשתנים דרך הUI
# ===================================

# חשוב: הוסף .env ל-.gitignore כדי לא לשלוח סודות ל-Git!
